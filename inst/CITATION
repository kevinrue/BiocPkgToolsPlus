pkgVer <- function(pkg) {
    if (!exists("meta") || is.null(meta)) meta <- packageDescription(pkg)
    ver <- meta$Version
    paste0('https://github.com/kevinrue/BiocPkgToolsPlus/', pkg, ' - R package version ', ver)
}

c(

    bibentry(bibtype="manual",
        title = "Demonstration of a Bioconductor Package",
        author = personList(
            as.person("kevinrue")
        ),
        year = format(Sys.Date(), "%Y"),
        url = "http://www.bioconductor.org/packages/BiocPkgToolsPlus",
        note = pkgVer('BiocPkgToolsPlus'),
        doi = '10.18129/B9.bioc.BiocPkgToolsPlus'
    ),
    bibentry(bibtype="article",
        title = "Demonstration of a Bioconductor Package",
        author = personList(
            as.person("kevinrue")
        ),
        year = format(Sys.Date(), "%Y"),
        journal = "bioRxiv",
        doi = "10.1101/TODO",
        url = "https://www.biorxiv.org/content/10.1101/TODO"
    )
)
